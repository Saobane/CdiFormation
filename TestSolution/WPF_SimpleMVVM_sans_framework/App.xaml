<Application x:Class="WpfMvvmSample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WpfMvvmSample.converters"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converters:BooleanToSolidColorBrushConverter x:Key="cvBooleanToSolidColorBrushConverter"/>
                    <converters:BooleanToSexConverter x:Key="cvBooleanToSexConverter"/>
                    <Style x:Key="PhoneTextTitle1Style" TargetType="TextBlock">
                        <Setter Property="FontSize" Value="20"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
